datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Set your PostgreSQL database URL as an environment variable
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
